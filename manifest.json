{
  "manifest_version": 3,
  "name": "Element Screenshot Capture",
  "version": "1.0.0",
  "description": "快速截图选中的页面元素并保存到本地",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "元素截图工具"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/html2canvas.min.js", "libs/snapdom.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lang/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
   }
}